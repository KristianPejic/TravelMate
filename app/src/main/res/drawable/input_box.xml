<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (soft and diffused) -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" /> <!-- Lighter shadow for a softer effect -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Main box -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#1E90FF" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>