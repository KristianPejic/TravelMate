<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/trip_fragment_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan Your Trip"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#1A1A1A" />

        <!-- Origin Spinner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_map"
                android:tint="#2196F3"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/originSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>

        <!-- Destination Spinner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:tint="#2196F3"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/destinationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>

        <!-- Helper text -->
        <TextView
            android:id="@+id/helperText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select origin city first"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <!-- Transport Spinner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_directions"
                android:tint="#2196F3"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/transportSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>

        <!-- Date Buttons -->
        <Button
            android:id="@+id/departureDateBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“… Select Departure Date"
            android:textColor="#666666"
            android:textSize="16sp"
            android:background="@drawable/date_button_background"
            android:layout_marginBottom="12dp"
            android:gravity="center|start"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <Button
            android:id="@+id/returnDateBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“… Select Return Date"
            android:textColor="#666666"
            android:textSize="16sp"
            android:background="@drawable/date_button_background"
            android:layout_marginBottom="32dp"
            android:gravity="center|start"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Trip Preview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/previewCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip Preview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/previewRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:id="@+id/previewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/previewCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveTripBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Create Trip"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/primary_button_background"
            android:layout_marginTop="16dp"
            android:enabled="false" />

        <!-- Helper Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your trip will be saved and you can view it in the Home tab"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>