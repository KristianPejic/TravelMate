<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo i naslov -->
        <LinearLayout
            android:layout_width="264dp"
            android:layout_height="73dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/travel_planner_logo"
                android:contentDescription="Travel Planner Logo"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRAVEL PLANNER"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Less. Travel More."
                    android:textColor="#327097"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Sign up"
            android:textColor="#1E90FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Name -->
        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/input_box"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/baseline_account_box_24"/>/>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Name"
                android:inputType="textPersonName"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Surname -->
        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/input_box"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Surname icon"
                android:background="@drawable/baseline_account_box_24"/>

            <EditText
                android:id="@+id/surnameEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Surname"
                android:inputType="textPersonName"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/input_box"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:contentDescription="Email icon" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/input_box"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock_password"
                android:contentDescription="Password icon" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Confirm Password -->
        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/input_box"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock_password"
                android:contentDescription="Confirm Password icon" />

            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/registerLoginPageTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="#989898"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loginTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textColor="#1E90FF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
